---
import Footer from '../components/Footer.astro';
import LoginModal from '../components/LoginModal.astro';
import "@fontsource-variable/plus-jakarta-sans";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<script src="../../js/login.js" defer></script>
		<title>WeeURL</title>
	</head>
	<body class="flex flex-col min-h-screen bg-gradient-to-b from-gray-900 to-gray-800">
		<!-- Añadido pt-24 para dar más espacio al header fijo -->
		<main class="flex-grow pt-24">
			<div class="light"></div>
			<slot />
			<LoginModal />
			<script src="../../js/light.js"></script>
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background: radial-gradient(125% 125% at 50% 10%,#000 40%,rgb(102, 51, 238) 100%);
		color: white;
		font-family: 'Plus Jakarta Sans', "system-ui", sans-serif;
	}
	
	.light {
		position: absolute;
		width: 100px;
		height: 100px;
		background: radial-gradient(circle, rgba(255,255,255,0.8) 0%, rgba(255, 255, 255, 0) 70%);
		pointer-events: none;
		mix-blend-mode: screen;
		transition: left 0.12s cubic-bezier(.4,1,.7,1), top 0.12s cubic-bezier(.4,1,.7,1);
		z-index: 30;
	}


</style>
