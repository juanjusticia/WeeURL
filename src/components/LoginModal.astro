<div id="loginModal" class="fixed inset-0 flex items-center justify-center hidden bg-black/60 transition-opacity duration-300">
    <div class="bg-white p-8 rounded-lg shadow-lg transform transition-transform duration-300 scale-95 shadow-[#8d6aed] shadow-lg">
        <h2 id="loginField" class="text-2xl mb-4 text-center text-gray-600">Login</h2>
        <form>
            <div class="mb-4">
                <label for="user" class="block text-gray-700">Usuario</label>
                <input type="text" id="user" class="text-gray-600 border-2 mb-2 border-[#6633ee]/60 focus:outline-none focus-within:border-[#6633ee] rounded-lg p-2 mt-2 w-full" placeholder="Usuario" required>
            </div>
            <div class="mb-4">
                <label for="password" class="block text-gray-700">Contraseña</label>
                <input type="password" id="password" class="text-gray-600 border-2 mb-2 border-[#6633ee]/60 focus:outline-none focus-within:border-[#6633ee] rounded-lg p-2 mt-2 w-full" placeholder="Contraseña" required>
            </div>
            <div id="extraField" class="mb-4 hidden">
                <label for="email" class="block text-gray-700">Email</label>
                <input type="email" id="email" class="text-gray-600 border-2 mb-2 border-[#6633ee]/60 focus:outline-none focus-within:border-[#6633ee] rounded-lg p-2 mt-2 w-full" placeholder="Email">
            </div>
            <button type="submit" class="bg-[#6633ee]/60 hover:bg-[#6633ee] rounded-2xl text-white/90 hover:text-white font-bold h-10 w-full transition-colors">
                Enviar
            </button>
            
            <div class="mt-3 text-center">
                <a href="#" id="forgotPasswordLink" class="text-sm text-[#6633ee] hover:underline">¿Olvidaste tu contraseña?</a>
            </div>
            
            <div class="relative my-4">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-gray-300"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="px-2 bg-white text-gray-500">o</span>
                </div>
            </div>
            <button type="button" id="googleLoginBtn" class="w-full flex items-center justify-center gap-2 bg-white border border-gray-300 rounded-2xl text-gray-700 hover:bg-gray-50 font-medium h-10 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" class="mr-2">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill-rule="evenodd" clip-rule="evenodd"/>
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill-rule="evenodd" clip-rule="evenodd"/>
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l3.66-2.84z" fill-rule="evenodd" clip-rule="evenodd"/>
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill-rule="evenodd" clip-rule="evenodd"/>
                </svg>
                Continuar con Google
            </button>
        </form>
        <div class="mt-4 text-center text-gray-600 flex justify-center items-center">
            <p id="labelRegistro" class="mr-2">¿No tienes una cuenta?</p>
            <a href="#" id="toggleExtraField" class="text-[#6633ee] hover:underline">Regístrate</a>
        </div>
    </div>
</div>

<!-- Modal de recuperación de contraseña -->
<div id="passwordRecoveryModal" class="fixed inset-0 items-center justify-center bg-black/60 transition-opacity duration-300 z-50 hidden">
    <div class="bg-white p-8 rounded-lg shadow-lg transform transition-transform duration-300 scale-95 w-full max-w-md mx-4">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-xl font-bold text-gray-800">Recuperar contraseña</h3>
            <button id="closeRecoveryModal" class="text-gray-500 hover:text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        <p class="text-gray-600 mb-4">Introduce tu correo electrónico y te enviaremos un enlace para restablecer tu contraseña.</p>
        
        <form id="passwordRecoveryForm">
            <div class="mb-4">
                <label for="recoveryEmail" class="block text-gray-700 mb-1">Correo electrónico</label>
                <input type="email" id="recoveryEmail" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#6633ee]" required>
            </div>
            
            <div id="recoveryMessage" class="hidden mb-4 p-3 rounded text-sm"></div>
            
            <button type="submit" class="w-full bg-[#6633ee] text-white py-2 px-4 rounded-md hover:bg-[#5a2ce0] transition-colors">
                Enviar enlace de recuperación
            </button>
        </form>
    </div>
</div>

<style>
    /* Estilos para los mensajes de éxito y error */
    .success-message {
        background-color: rgba(74, 222, 128, 0.1);
        border: 1px solid #4ade80;
        color: #166534;
    }
    .error-message {
        background-color: rgba(248, 113, 113, 0.1);
        border: 1px solid #f87171;
        color: #991b1b;
    }
</style>

