---
import UsersTable from './react/UsersTable';

// Administrator.astro
// Componente principal del panel de administración
---

<div class="flex flex-col items-center justify-center flex-grow min-h-[70vh]">
  <div class="w-full max-w-6xl px-4 md:px-6">
    <h1 class="text-center text-4xl mb-10 text-white font-bold">
      Administración de <span class="text-[#8d6aed]">Usuarios</span>
    </h1>
    
    <div class="bg-white/90 rounded-lg p-6 mb-8 shadow-[#8d6aed] shadow-lg">
      <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Lista de Usuarios</h2>
      </div>
      
      {/* Componente de React */}
      <UsersTable client:load />
    </div>
  </div>
</div>

<style>
  /* Estilos personalizados para la tabla */
  table {
    border-collapse: separate;
    border-spacing: 0;
  }
  
  th, td {
    padding: 0.75rem 1.5rem;
  }
  
  thead th {
    position: sticky;
    top: 0;
    z-index: 1;
  }
  
  tbody tr:last-child td:first-child {
    border-bottom-left-radius: 0.5rem;
  }
  
  tbody tr:last-child td:last-child {
    border-bottom-right-radius: 0.5rem;
  }
</style>
