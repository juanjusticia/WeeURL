---
import urlImage from "../assets/urlImg.png";
import UserMenu from "./react/UserMenu";
---

<header class="fixed top-0 left-0 right-0 z-1 bg-black/30 backdrop-blur-md border-b border-white/10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <a href="/" class="flex items-center">
          <img src={urlImage.src} alt="WeeURL Logo" class="h-10 w-auto" />
          <span class="ml-3 text-white text-xl font-bold">WeeURL</span>
        </a>
      </div>
      
      <!-- MenÃº de usuario -->
      <div class="flex items-center">
        <UserMenu client:load />
      </div>
    </div>
  </div>
</header>
<script src="/js/headerAuth.js" defer></script>